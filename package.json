{
  "name": "p-args",
  "version": "0.1.0-alpha.1",
  "description": "Zero dependencies TypeScript wrapper around Node.js `util.parseArgs()` API.",
  "keywords": [
    "args",
    "argument",
    "argv",
    "cli",
    "command",
    "command-line",
    "option",
    "parseArgs",
    "parser",
    "typescript"
  ],
  "homepage": "https://jrson.me",
  "bugs": {
    "url": "https://github.com/jrson83/p-args/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jrson83/p-args.git"
  },
  "license": "MIT",
  "author": "JÃ¶rn Spangenberg <github@jrson.me> (https://jrson.me)",
  "type": "module",
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "files": ["dist"],
  "scripts": {
    "clean": "rm -rf dist",
    "lint-check": "biome lint .",
    "lint-fix": "biome lint --write .",
    "fmt-check": "biome format .",
    "fmt-fix": "biome format . --write",
    "type-check": "tsc --noEmit",
    "quality-check": "pnpm lint-check && pnpm fmt-check && pnpm type-check && pnpm build && pnpm test",
    "dev": "tsx src/index.ts",
    "build": "pkgroll --target=node18.12.0 --minify",
    "test": "node --import=tsx/esm ./test/run.ts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@types/node": "^22.16.5",
    "husky": "^9.1.7",
    "nano-staged": "^0.8.0",
    "pkgroll": "^2.14.5",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.12.0",
    "pnpm": ">=10.13.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "nano-staged": {
    "*.ts": "biome check --write .",
    "*": "biome format . --write"
  },
  "packageManager": "pnpm@10.13.1"
}
